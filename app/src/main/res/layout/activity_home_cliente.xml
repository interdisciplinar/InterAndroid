<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fundo_Branco"
    android:orientation="vertical"

    >

    <include
        android:id="@+id/toolbarTituloApp"
        layout="@layout/toolbar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbarTituloApp"
        android:gravity="center">


        <ImageButton
            android:id="@+id/btnMapa"
            android:layout_width="@dimen/botaoHome"
            android:layout_height="@dimen/botaoHome"
            android:background="@android:color/white"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/ic_mapa"

            />

        <ImageButton
            android:id="@+id/btnAgendamento"
            android:layout_width="@dimen/botaoHome"
            android:layout_height="@dimen/botaoHome"
            android:layout_below="@+id/btnMapa"
            android:layout_marginTop="35dp"
            android:background="@android:color/white"
            android:scaleType="fitEnd"
            android:tint="@android:drawable/screen_background_dark_transparent"
            app:srcCompat="@drawable/ic_agendaw" />

        <ImageButton
            android:id="@+id/btnBuscar"
            android:layout_width="@dimen/botaoHome"
            android:layout_height="@dimen/botaoHome"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/btnMapa"
            android:background="@android:color/white"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/ic_buscar" />

        <ImageButton
            android:id="@+id/btnRecentes"
            android:layout_width="@dimen/botaoHome"
            android:layout_height="@dimen/botaoHome"
            android:layout_below="@id/btnMapa"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/btnAgendamento"
            android:background="@android:color/white"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/ic_history" />

    </RelativeLayout>
</RelativeLayout>