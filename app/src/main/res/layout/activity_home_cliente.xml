<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fundo_Branco"
    android:orientation="vertical"

    >

    <include
        android:id="@+id/toolbarTituloApp"
        layout="@layout/toolbar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        >


    <ImageButton
        android:id="@+id/btnMapa"
        android:layout_width="@dimen/botaoHome"
        android:layout_height="@dimen/botaoHome"
        android:scaleType="fitEnd"
        android:background="@android:color/white"
        app:srcCompat="@drawable/ic_mapa"

        />

    <ImageButton
        android:id="@+id/Agendamento"
        android:layout_width="@dimen/botaoHome"
        android:layout_height="@dimen/botaoHome"
        android:scaleType="fitEnd"
        android:tint="@android:drawable/screen_background_dark_transparent"
        app:srcCompat="@drawable/ic_agendaw"
        android:layout_below="@+id/btnMapa"
        android:layout_marginTop="35dp"
        android:background="@android:color/white"
        />

    <ImageButton
        android:id="@+id/Buscar"
        android:layout_width="@dimen/botaoHome"
        android:layout_height="@dimen/botaoHome"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/ic_buscar"
        android:layout_toRightOf="@+id/btnMapa"
        android:layout_marginLeft="35dp"
        android:background="@android:color/white"/>

    <ImageButton
        android:id="@+id/Recentes"
        android:layout_width="@dimen/botaoHome"
        android:layout_height="@dimen/botaoHome"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/ic_history"
        android:layout_toRightOf="@+id/Agendamento"
        android:layout_below="@id/btnMapa"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        android:background="@android:color/white"
        />

    </RelativeLayout>
</RelativeLayout>